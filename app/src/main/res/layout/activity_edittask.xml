<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/margin_30"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edtUserId"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/textHeight"
        android:ems="10"
        android:textSize="@dimen/fontSize_26"
        android:hint="@string/hintUserId"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/txtDate"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtTime"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etSystolic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtUserId"
        android:layout_marginStart="@dimen/margin_5"
        android:layout_marginTop="@dimen/margin_30"
        android:layout_marginEnd="@dimen/margin_5"
        android:layout_marginBottom="@dimen/margin_5"
        android:ems="10"
        android:hint="@string/hintSystolic"
        android:inputType="number"
        android:minHeight="@dimen/textHeight"
        android:textSize="@dimen/fontSize_26" />

    <EditText
        android:id="@+id/etDiastolic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etSystolic"
        android:layout_marginStart="@dimen/margin_5"
        android:layout_marginTop="@dimen/margin_30"
        android:layout_marginEnd="@dimen/margin_5"
        android:layout_marginBottom="@dimen/margin_5"
        android:ems="10"
        android:hint="@string/hintDiastolic"
        android:inputType="number"
        android:minHeight="@dimen/textHeight"
        android:textSize="@dimen/fontSize_26" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/btnHeight"
        android:layout_above="@+id/btnDelete"
        android:text="@string/btnSave"
        android:textSize="@dimen/fontSize_26"/>


    <Button
        android:id="@+id/btnDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/btnHeight"
        android:layout_above="@+id/btnCancel"
        android:text="@string/btnDelete"
        android:textSize="@dimen/fontSize_26"/>

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/btnHeight"
        android:text="@string/btnCancel"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/fontSize_26"/>


</RelativeLayout>
